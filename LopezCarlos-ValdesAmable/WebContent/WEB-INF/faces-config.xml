<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">

<application>
		<resource-bundle>
			<base-name>messages</base-name>
			<var>msgs</var>
		</resource-bundle>
	</application>

<managed-bean>
		<managed-bean-name>usuarios</managed-bean-name>
		<managed-bean-class>uo.sdi.presentation.UserBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>tareas</managed-bean-name>
		<managed-bean-class>uo.sdi.presentation.TaskBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
<managed-bean>
		<managed-bean-name>settings</managed-bean-name>
		<managed-bean-class>uo.sdi.presentation.SettingsBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>

	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>error</from-outcome>
			<to-view-id>/error.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/index.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{usuarios.iniciarSesion}</from-action>
			<from-outcome>usuario</from-outcome>
			<to-view-id>/restricted/user/usuario.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{usuarios.registrarse}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/registro.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{usuarios.iniciarSesion}</from-action>
			<from-outcome>administrador</from-outcome>
			<to-view-id>/restricted/admin/administrador.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/restricted/admin/administrador.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{usuarios.inicializarBBDD}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/restricted/admin/administrador.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>		
	<navigation-rule>
		<from-view-id>/restricted/user/usuario.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{usuarios.editarTarea}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/restricted/user/crearTarea.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{usuarios.inbox}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/restricted/user/listadoInbox.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{usuarios.hoy}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/restricted/user/listadoHoy.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{usuarios.semana}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/restricted/user/listadoSemana.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{usuarios.cerrarSesion}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-action>#{usuarios.cerrarSesion}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/restricted/user/crearTarea.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{tareas.crearTask}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/restricted/user/usuario.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{tareas.crearTask}</from-action>
			<from-outcome>fracaso</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/registro.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{usuarios.registraUsuario}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{usuarios.registraUsuario}</from-action>
			<from-outcome>fracaso</from-outcome>
			<to-view-id>/registro.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
</faces-config>
